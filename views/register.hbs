{{> header}}
<div class="container setPadding">
    <form class="needs-validation" novalidate>
       <div class="textlabel">Service Request Form</div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationCustom01">Enter your name</label>
                <input type="text" class="form-control" id="validationCustom01" value="Mark" required>
                <div class="valid-feedback">
                    Good!
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationCustom02">Enter your phone number</label>
                <input type="text" class="form-control" id="validationCustom02" value="Otto" required>
                <div class="valid-feedback">
                    Good!
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="validationCustomUsername">Enter Your email adress</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend">@</span>
                    </div>
                    <input type="text" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                    <div class="invalid-feedback">
                        Please enter a valid email adress.
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationCustom04">Select service</label>
                <select class="custom-select" id="validationCustom04" required>
                    <option selected disabled value="">request for service</option>
                    <option>...</option>
                </select>
                <div class="invalid-feedback">
                    Please select a service that will be offered to you.
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-8 mb-3">
                <label for="validationCustom05">Enter delivery type</label>
                <input type="text" class="form-control" id="validationCustom05" required>
                <div class="invalid-feedback">
                    Please enter the delivery type.
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-8 mb-3">
                <label for="validationCustom03">Adress</label>
                <input type="text" class="form-control" id="validationCustom03" required>
                <div class="invalid-feedback">
                    Enter your adress.
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-8 mb-3">
                <label for="validationTextarea">Enter Items</label>
                <textarea class="form-control" id="validationTextarea" placeholder="Required example textarea" required></textarea>
                <div class="invalid-feedback">
                     Please enter the clothes to be washed.
                </div>
            </div>
        </div>
        <div class="col-md-6 pt-2.2">
            <hr>
            <div class="textlabel" id ="formatPayment">payment details</div>
        </div>
        <div class="form-row">
            <div class="col-md-3">
                <label for="validationCustomUsername">Enter card number</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="far fa-credit-card"></i></span>
                    </div>
                    <input type="text" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                    <div class="invalid-feedback">
                        Please enter a valid credit card.
                    </div>
                </div>
            </div>
            <div class="col-md-3 pl-3">
               <label for="validationCustom03">Expiring date</label>
               <div class="input-group input-daterange" id = "loadDatePicker">
                    <input type="text" placeholder="dd/mm/yyyy" class="form-control" aria-describedby="inputGroupPrepend" required>
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                    </div>
                    <div class="invalid-feedback">
                        Please enter card expiring date.
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3">
                <label for="validationCustom03">Enter card name</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-sort-alpha-down"></i></span>
                    </div>
                    <input type="text" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                    <div class="invalid-feedback">
                      please enter the name of your.
                    </div>
                </div>
            </div> 
            <div class="col-md-3 pl-3">
                <label for="validationCustom03"> card code</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend"><i class="fas fa-unlock-alt"></i></span>
                    </div>
                    <input type="text" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                    <div class="invalid-feedback">
                      Enter three digit code behind your card.
                    </div>
                </div>
            </div>
        </div>
